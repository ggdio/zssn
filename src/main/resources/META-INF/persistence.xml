<?xml version="1.0" encoding="UTF-8"?>
<persistence 
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">
    
    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		
    	<mapping-file>META-INF/tables/item.xml</mapping-file>
    	<mapping-file>META-INF/tables/person.xml</mapping-file>
    	<mapping-file>META-INF/tables/infection.xml</mapping-file>
    	
		<class>br.com.ggdio.zssn.domain.model.Item</class>
		<class>br.com.ggdio.zssn.domain.model.Location</class>
		<class>br.com.ggdio.zssn.domain.model.Person</class>
		<class>br.com.ggdio.zssn.domain.model.Infection</class>
		
		<properties>		
			<property name="hibernate.hbm2ddl.auto" value="create-drop"/>
		</properties>
	</persistence-unit>
</persistence>